pkgname=sdl2
pkgver=9999
pkgrel=1
url="https://github.com/rsn8887/SDL-Vita.git"
source=("git://github.com/rsn8887/SDL-Vita.git" "sdl2.patch")
sha256sums=('SKIP' 'SKIP')

prepare() {
  cd SDL-Vita
  patch --strip=1 --input="${srcdir}/sdl2.patch"
}


build() {
  cd SDL-Vita
  make -j$(nproc) -f Makefile.vita
}

package () {
  cd SDL-Vita
  make -f Makefile.vita DESTDIR=${pkgdir} install
}
