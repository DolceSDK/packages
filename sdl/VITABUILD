pkgname=sdl
pkgver=9999
pkgrel=1
url="https://github.com/rsn8887/SDL-Vita"
source=("git://github.com/rsn8887/SDL-Vita.git#branch=SDL12" "sdl.patch")
sha256sums=('SKIP' 'SKIP')

prepare() {
  cd SDL-Vita
  patch --strip=1 --input="${srcdir}/sdl.patch"
}

build() {
  cd SDL-Vita
  make -j$(nproc) -f Makefile.vita
}

package () {
  cd SDL-Vita
  make -f Makefile.vita DESTDIR=${pkgdir} install
}
