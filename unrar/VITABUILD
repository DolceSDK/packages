pkgname=unrar
pkgver=5.4.5
pkgrel=1
url="http://www.rarlab.com"
source=("http://www.rarlab.com/rar/unrarsrc-${pkgver}.tar.gz")
sha256sums=('e470c584332422893fb52e049f2cbd99e24dc6c6da971008b4e2ae4284f8796c')

prepare() {
  cd ${pkgname}
  patch -Np1 -i "${startdir}/patches/0001-vita.patch"
}

build() {
  cd ${pkgname}
  make -j$(nproc) -f Makefile.vita
}

package () {
  cd ${pkgname}
  mkdir -p ${pkgdir}/$DOLCESDK/arm-dolce-eabi/lib
  cp libunrar.a ${pkgdir}/$DOLCESDK/arm-dolce-eabi/lib
}
