pkgname=libvorbis
pkgver=1.3.6
pkgrel=1
url="https://xiph.org/vorbis/"
source=("http://downloads.xiph.org/releases/vorbis/libvorbis-${pkgver}.tar.gz")
sha256sums=('6ed40e0241089a42c48604dc00e362beee00036af2d8b3f46338031c9e0351cb')

build() {
  cd $pkgname-$pkgver
  ./configure --host=arm-dolce-eabi --prefix=$prefix --disable-shared --enable-static
  make -j$(nproc)
}

package () {
  cd $pkgname-$pkgver
  make DESTDIR=$pkgdir install
}
