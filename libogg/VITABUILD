pkgname=libogg
pkgver=1.3.3
pkgrel=1
url="https://www.xiph.org/ogg/"
source=("https://downloads.xiph.org/releases/ogg/libogg-${pkgver}.tar.gz")
sha256sums=('c2e8a485110b97550f453226ec644ebac6cb29d1caef2902c007edab4308d985')

build() {
  cd $pkgname-$pkgver
  ./configure --host=arm-dolce-eabi --prefix=$prefix --disable-shared --enable-static
  make -j$(nproc)
}

package () {
  cd $pkgname-$pkgver
  make DESTDIR=$pkgdir install
}
