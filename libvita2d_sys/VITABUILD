pkgname=libvita2d_sys
pkgver=master
pkgrel=1
url="https://github.com/GrapheneCt/libvita2d_sys"
source=("https://github.com/GrapheneCt/${pkgname}/archive/${pkgver}.zip")
sha256sums=('SKIP')

build() {
  cd "${pkgname}-${pkgver}/libvita2d_sys"
  make -j$(nproc)
}

package () {
  cd "${pkgname}-${pkgver}/libvita2d_sys"
  make DESTDIR="${pkgdir}" install
}
