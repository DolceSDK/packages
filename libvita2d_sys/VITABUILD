pkgname=libvita2d_sys
pkgver=9999
pkgrel=1
url="https://github.com/GrapheneCt/libvita2d_sys"
source=("git://github.com/GrapheneCt/libvita2d_sys.git")
sha256sums=('SKIP')

build() {
  cd $pkgname/$pkgname
  make -j$(nproc) CFLAGS='-Wl,-q -Wall -O3 -I$(INCLUDES) -I$(DOLCESDK)/arm-dolce-eabi/include/freetype2' # lto is broken on Windows vita-gcc for some reason
}

package () {
  cd $pkgname/$pkgname
  make DESTDIR=$pkgdir install
}
