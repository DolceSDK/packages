pkgname=expat
pkgver=2.2.0
pkgrel=1
url="http://expat.sourceforge.net/"
source=("http://downloads.sourceforge.net/project/expat/expat/${pkgver}/expat-${pkgver}.tar.bz2")
sha256sums=('d9e50ff2d19b3538bd2127902a89987474e1a4db8e43a66a4d1a712ab9a504ff')

build() {
  cd $pkgname-$pkgver
  ./configure --host=arm-dolce-eabi --prefix=$prefix --disable-shared --enable-static
  make -j$(nproc)
}

package () {
  cd $pkgname-$pkgver
  make DESTDIR=$pkgdir install
}
