pkgname=libk
pkgver=9999
pkgrel=1
url="https://github.com/DaveeFTW/libk"
source=("git://github.com/DaveeFTW/libk.git#branch=dev")
sha256sums=('SKIP')

build() {
  cd libk
  mkdir build && cd build
  cmake ..  -DCMAKE_TOOLCHAIN_FILE=$DOLCESDK/share/dolce.toolchain.cmake -DCMAKE_INSTALL_PREFIX=$prefix
  make -j$(nproc)
}

package () {
  cd libk/build
  make DESTDIR=$pkgdir install
}
