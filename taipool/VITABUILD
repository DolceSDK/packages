pkgname=taipool
pkgver=9999
pkgrel=1
url="https://github.com/Rinnegatamante/taipool"
source=("git://github.com/Rinnegatamante/taipool.git" "taipool.patch")
sha256sums=('SKIP' 'SKIP')

prepare() {
  cd "$pkgname"
  patch --strip=1 --input="${srcdir}/taipool.patch"
}

build() {
  cd $pkgname
  mkdir build && cd build
  cmake .. -DCMAKE_TOOLCHAIN_FILE=$DOLCESDK/share/dolce.toolchain.cmake -DCMAKE_INSTALL_PREFIX=$prefix
  make -j$(nproc)
}

package () {
  cd $pkgname/build
  make DESTDIR=$pkgdir install
}

